<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivFood"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="525dp"
        android:padding="10dp"
        android:src="@drawable/promocion_burguers" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFoodElements"
        android:layout_width="wrap_content"
        android:layout_height="197dp"
        android:layout_alignTop="@+id/ivFood"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="204dp"
        android:layout_marginBottom="288dp"
        android:paddingTop="20dp"/>

    <RadioGroup
        android:id="@+id/rgBurguerTypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="480dp"
        android:layout_marginBottom="145dp"
        android:layout_alignTop="@+id/rvFoodElements"
        android:background="@android:color/holo_blue_light"
        android:paddingLeft="15dp">

        <RadioButton
            android:id="@+id/rbHawaiana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hawaiana" />

        <RadioButton
            android:id="@+id/rbDoble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doble" />

        <RadioButton
            android:id="@+id/rbSencilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sencilla" />
    </RadioGroup>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="10dp"
        android:text="Regresar"
        android:layout_alignTop="@+id/rgBurguerTypes"
        android:backgroundTint="#F44336"
        />

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#2196F3"
        android:layout_marginStart="227dp"
        android:layout_marginEnd="34dp"
        android:layout_alignTop="@+id/rgBurguerTypes"
        android:text="Ordenar" />


</RelativeLayout>

